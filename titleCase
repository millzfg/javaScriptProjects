function titleCase(str) {
  let strArr = str.split(" ");
  let newStr = "";
  for(let i = 0; i < strArr.length; i++){
    newStr = newStr + strArr[i][0].toUpperCase();
    for(let j = 1; j < strArr[i].length; j++){
      newStr = newStr + strArr[i][j].toLowerCase();
    }
    newStr = newStr + " ";
  }
  return newStr.trimEnd();
}
